---
import Layout from "../../layouts/BaseLayout.astro";
import { projects, getProjectById } from "../../data/projects";
import { ArrowLeft, ExternalLink, Github, Share2, ChevronRight, Home } from "lucide-react";
import AnimatedCounter from "../../components/interactive/AnimatedCounter";

export function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { slug } = Astro.params;
const project = getProjectById(slug);

if (!project) {
  return Astro.redirect("/404");
}

// Find current project index for next/prev navigation
const currentIndex = projects.findIndex(p => p.id === slug);
const prevProject = currentIndex > 0 ? projects[currentIndex - 1] : null;
const nextProject = currentIndex < projects.length - 1 ? projects[currentIndex + 1] : null;

// Generate dynamic title and description
const pageTitle = `${project.title} - ${project.category.toUpperCase()} Project | Farhan Portfolio`;
const pageDescription = project.fullDescription || project.shortDescription;
const pageOgImage = project.thumbnail.startsWith('http') 
  ? project.thumbnail 
  : `https://farhan.info${project.thumbnail}`;

// Social sharing URL
const shareUrl = `https://farhan.info/projects/${slug}`;
const shareText = `Check out ${project.title} - ${project.shortDescription}`;
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  ogImage={pageOgImage}
>
  <main class="min-h-screen py-12">
    <!-- Breadcrumbs -->
    <div class="max-w-6xl mx-auto px-4 mb-8">
      <nav aria-label="Breadcrumb" class="flex items-center gap-2 text-sm text-textSecondary">
        <a href="/" class="hover:text-accent-blue transition-colors flex items-center gap-1" aria-label="Home">
          <Home size={16} aria-hidden="true" />
          <span>Home</span>
        </a>
        <ChevronRight size={16} aria-hidden="true" />
        <a href="/#projects" class="hover:text-accent-blue transition-colors">Projects</a>
        <ChevronRight size={16} aria-hidden="true" />
        <span class="text-textPrimary" aria-current="page">{project.title}</span>
      </nav>
    </div>

    <!-- Hero Section -->
    <div class="max-w-6xl mx-auto px-4 mb-12">
      <div class="fade-in-up">
        <div class="flex items-center gap-3 mb-4">
          <span
            class="px-4 py-2 bg-gradient-to-r from-accent-indigo to-accent-purple text-white rounded-full text-sm font-medium"
          >
            {project.category.toUpperCase()}
          </span>
          <span class="text-textSecondary">{project.year}</span>
        </div>

        <h1 class="gradient-text mb-6">{project.title}</h1>
        <p class="text-xl text-textSecondary max-w-3xl mb-8">
          {project.fullDescription}
        </p>

        <div class="flex flex-wrap gap-4 items-center">
          {
            project.liveUrl && (
              <a
                href={project.liveUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-accent-indigo to-accent-purple text-white rounded-lg font-medium hover:shadow-glow-indigo transition-all min-h-[44px]"
                aria-label="View live project (opens in new tab)"
              >
                <ExternalLink size={20} aria-hidden="true" />
                <span>View Live Project</span>
              </a>
            )
          }
          {
            project.githubUrl && (
              <a
                href={project.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 border-2 border-accent-indigo text-accent-indigo rounded-lg font-medium hover:bg-accent-indigo hover:text-white transition-all min-h-[44px]"
                aria-label="View source code on GitHub (opens in new tab)"
              >
                <Github size={20} aria-hidden="true" />
                <span>View Code</span>
              </a>
            )
          }
          <!-- Social Sharing -->
          <button
            onclick={`if (navigator.share) { navigator.share({title: '${project.title}', text: '${shareText}', url: '${shareUrl}'}).catch(() => {}); } else { navigator.clipboard.writeText('${shareUrl}').then(() => alert('Link copied to clipboard!')).catch(() => {}); }`}
            class="inline-flex items-center gap-2 px-6 py-3 border-2 border-textSecondary/20 text-textSecondary rounded-lg font-medium hover:bg-glass-tinted hover:border-accent-blue hover:text-accent-blue transition-colors min-h-[44px]"
            aria-label="Share this project"
            title="Share project"
          >
            <Share2 size={20} aria-hidden="true" />
            <span>Share</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Metrics Section -->
    {
      project.metrics && project.metrics.length > 0 && (
        <div class="max-w-6xl mx-auto px-4 mb-16">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 fade-in-up">
            {project.metrics.map((metric) => (
              <div class="glass-card p-6 text-center">
                <div class="text-3xl font-bold gradient-text mb-2">
                  {metric.value}
                </div>
                <div class="text-sm text-textSecondary">{metric.label}</div>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Images Gallery -->
    <div class="max-w-6xl mx-auto px-4 mb-16">
      <div class="grid md:grid-cols-2 gap-6 fade-in-up">
        {
          project.images.map((image, i) => (
            <div class="scale-in rounded-2xl overflow-hidden shadow-premium hover:shadow-premium-lg transition-shadow">
              <img
                src={image}
                alt={`${project.title} screenshot ${i + 1}`}
                class="w-full h-full object-cover"
                loading="lazy"
                decoding="async"
                fetchpriority="auto"
              />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Problem Section -->
    <div class="max-w-4xl mx-auto px-4 mb-16 fade-in-up">
      <div class="glass-card p-8">
        <h2 class="text-3xl font-bold mb-4 flex items-center gap-3">
          <span class="text-accent-indigo">ðŸ’¡</span> The Challenge
        </h2>
        <p class="text-lg text-textSecondary leading-relaxed">
          {project.problem}
        </p>
      </div>
    </div>

    <!-- Solution Section -->
    <div class="max-w-4xl mx-auto px-4 mb-16 fade-in-up">
      <div class="glass-card p-8">
        <h2 class="text-3xl font-bold mb-4 flex items-center gap-3">
          <span class="text-accent-purple">ðŸš€</span> The Solution
        </h2>
        <p class="text-lg text-textSecondary leading-relaxed mb-6">
          {project.solution}
        </p>

        <!-- Tech Stack -->
        <div class="pt-6 border-t border-gray-200">
          <h3 class="text-xl font-semibold mb-4">Technology Stack</h3>
          <div class="flex flex-wrap gap-3">
            {
              project.techStack.map((tech) => (
                <span class="px-4 py-2 bg-white border border-accent-indigo/20 text-accent-indigo rounded-lg font-medium hover:bg-accent-indigo hover:text-white transition-all">
                  {tech.name}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Results Section -->
    <div class="max-w-4xl mx-auto px-4 mb-16 fade-in-up">
      <div class="glass-card p-8">
        <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
          <span class="text-accent-emerald">ðŸ“ˆ</span> The Results
        </h2>
        <ul class="space-y-4">
          {
            project.results.map((result) => (
              <li class="flex items-start gap-3">
                <span class="text-accent-emerald text-xl">âœ“</span>
                <span class="text-lg text-textSecondary">{result}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Testimonial Section -->
    {
      project.testimonial && (
        <div class="max-w-4xl mx-auto px-4 mb-16 fade-in-up">
          <div class="glass-card p-8 bg-gradient-to-br from-accent-indigo/10 to-accent-purple/10">
            <div class="text-4xl text-accent-indigo mb-4">"</div>
            <p class="text-xl text-textPrimary mb-6 italic">
              {project.testimonial.quote}
            </p>
            <div class="flex items-center gap-4">
              {project.testimonial.image && (
                <img
                  src={project.testimonial.image}
                  alt={project.testimonial.name}
                  class="w-16 h-16 rounded-full object-cover"
                />
              )}
              <div>
                <div class="font-semibold text-textPrimary">
                  {project.testimonial.name}
                </div>
                <div class="text-textSecondary">
                  {project.testimonial.role} at {project.testimonial.company}
                </div>
              </div>
            </div>
          </div>
        </div>
      )
    }

    <!-- Next/Previous Navigation -->
    {(prevProject || nextProject) && (
      <div class="max-w-6xl mx-auto px-4 my-12">
        <div class="flex flex-col sm:flex-row gap-4 justify-between">
          {prevProject ? (
            <a
              href={`/projects/${prevProject.id}`}
              class="group flex items-center gap-3 px-6 py-4 liquid-glass-card rounded-xl hover:bg-glass-tinted transition-all duration-300 flex-1 sm:flex-initial min-h-[44px]"
              aria-label={`Previous project: ${prevProject.title}`}
            >
              <ArrowLeft size={20} class="text-textSecondary group-hover:text-accent-blue transition-colors" aria-hidden="true" />
              <div class="flex flex-col">
                <span class="text-xs text-textSecondary uppercase tracking-wider">Previous</span>
                <span class="text-base font-semibold text-textPrimary group-hover:text-accent-blue transition-colors">{prevProject.title}</span>
              </div>
            </a>
          ) : (
            <div class="flex-1"></div>
          )}
          
          {nextProject ? (
            <a
              href={`/projects/${nextProject.id}`}
              class="group flex items-center gap-3 px-6 py-4 liquid-glass-card rounded-xl hover:bg-glass-tinted transition-all duration-300 flex-1 sm:flex-initial min-h-[44px] sm:text-right"
              aria-label={`Next project: ${nextProject.title}`}
            >
              <div class="flex flex-col sm:items-end">
                <span class="text-xs text-textSecondary uppercase tracking-wider">Next</span>
                <span class="text-base font-semibold text-textPrimary group-hover:text-accent-blue transition-colors">{nextProject.title}</span>
              </div>
              <ArrowLeft size={20} class="text-textSecondary group-hover:text-accent-blue transition-colors rotate-180" aria-hidden="true" />
            </a>
          ) : (
            <div class="flex-1"></div>
          )}
        </div>
      </div>
    )}

    <!-- CTA Section -->
    <div class="max-w-4xl mx-auto px-4 fade-in-up">
      <div class="glass-card p-8 text-center animated-gradient-bg text-white">
        <h2 class="text-3xl font-bold mb-4">
          Ready to Build Something Amazing?
        </h2>
        <p class="text-lg mb-6 opacity-90">
          Let's discuss how I can help bring your vision to life.
        </p>
        <a
          href="/#contact"
          class="inline-block px-8 py-4 bg-white text-accent-indigo rounded-lg font-bold hover:scale-105 transition-transform min-h-[44px] flex items-center justify-center"
          aria-label="Get in touch - Navigate to contact section"
        >
          Get In Touch
        </a>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { initScrollAnimations } from "../../utils/animations";
  
  document.addEventListener("DOMContentLoaded", () => {
    initScrollAnimations();
  });
</script>



---
import { Image } from "astro:assets";

const { title, message, name, role, image } = Astro.props;
---

<div
  class="bg-surface p-[20px] sm:p-6 rounded-[20px] flex flex-col justify-between gap-[20px] w-[318px] sm:w-[370.33px]"
>
  <div class="flex flex-col gap-[20px]">
    <h4 class="font-medium leading-[100%] text-[18px] sm:text-[24px]">
      {title}
    </h4>
    <p class="leading-[1.2] tracking-tight">{message}</p>
  </div>
  <div class="flex gap-[10px]">
    <div class="w-[50px] h-[50px] border-[3px] border-[#FFFFFF] rounded-[12px] overflow-hidden">
      <Image
        src={image}
        alt={name}
        class="object-cover object-top w-full h-full"
      />
    </div>
    <div class="flex flex-col justify-around">
      <h5 class="font-medium text-[16px] sm:text-[20px]">{name}</h5>
      <p class="tracking-tight">{role}</p>
    </div>
  </div>
</div>

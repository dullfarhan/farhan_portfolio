---
interface Props {
  number: string;
  children: any;
  className?: string;
}

const { number, children, className = '' } = Astro.props;
---

<div class={`flex items-baseline gap-4 mb-6 sm:mb-8 ${className}`}>
  <span class="text-lg sm:text-xl md:text-2xl font-mono font-bold text-accent-blue opacity-80 tracking-tight">
    {number}
  </span>
  <div class="flex-1 border-l-2 border-accent-blue/20 pl-4 sm:pl-6">
    {children}
  </div>
</div>


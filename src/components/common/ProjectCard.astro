---
// ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
}

const { title, description, image, tags } = Astro.props;
---

<div class="card group relative">
  <div class="relative w-full h-[220px] sm:h-[250px]">
    <!-- Default image -->
    <img
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-0"
    />
    <img
      src="/assets/images/DevelMo.png"
      alt={title}
      class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    />
  </div>
  <div class="ml-0 flex flex-col gap-3 sm:ml-3 ssm:gap-6">
    <h3 class="text-textPrimary">{title}</h3>
    <p class="text-textPrimary">{description}</p>
  </div>

  <div class="flex justify-center gap-1 sm:gap-2 my-2">
    {
      tags.map((tag) => (
        <span class="bg-[#ffffff] text-textPrimary text-[10px] sm:text-[14px] font-normal px-[12px] py-[10px] rounded-[99px] leading-[100%]">
          {tag}
        </span>
      ))
    }
  </div>
</div>

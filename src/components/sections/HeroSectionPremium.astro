---
import TypeWriter from "../interactive/TypeWriter";
import { ArrowDown, Github, Linkedin, ChevronRight } from "lucide-react";
import Divider from "../common/Divider.astro";
---

<header class="relative min-h-screen flex items-center overflow-hidden" role="banner">
  <!-- Subtle ambient background (handled by AmbientLight component) -->
  
  <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column - Content -->
      <div class="space-y-10">
        <!-- Badge - Apple Liquid Glass Style -->
        <div class="inline-flex items-center gap-2 liquid-glass-badge">
          <span class="w-2 h-2 bg-accent-blue rounded-full"></span>
          <span class="text-sm font-medium text-textPrimary">Available for hire</span>
        </div>

        <!-- Greeting -->
        <div class="space-y-4">
          <p class="text-sm text-textSecondary font-medium tracking-wide uppercase">Hi, my name is</p>
          <h1 class="text-display-sm md:text-display font-heading font-bold text-textPrimary">
            Farhan.
          </h1>
          <h2 class="text-3xl md:text-5xl font-heading font-bold text-textSecondary">
            I build things for the web.
          </h2>
        </div>

        <!-- Description -->
        <div class="max-w-xl space-y-6">
          <p class="text-body-lg text-textSecondary leading-relaxed">
            I'm a <span class="text-code">full-stack engineer</span> specializing in 
            building exceptional digital experiences. Currently focused on 
            <span class="text-code">AI-powered solutions</span> and 
            <span class="text-code">scalable cloud infrastructure</span>.
          </p>
        </div>

        <!-- Typewriter Role -->
        <div class="min-h-[3rem] flex items-center overflow-visible">
          <TypeWriter
            client:only="react"
            texts={[
              "Full-Stack Developer",
              "AI/ML Engineer", 
              "Cloud Architect",
              "DevOps Specialist"
            ]}
            className="text-2xl md:text-3xl font-heading font-bold text-accent-blue"
          />
        </div>

        <!-- CTA Buttons - Enhanced Visual Hierarchy -->
        <div class="flex flex-wrap gap-4 pt-6">
          <a 
            href="#contact" 
            class="cta-primary inline-flex items-center gap-2"
            aria-label="Navigate to contact section"
          >
            Get In Touch
            <ChevronRight size={20} aria-hidden="true" />
          </a>

          <a 
            href="#projects" 
            class="cta-secondary inline-flex items-center gap-2"
            aria-label="Navigate to projects section"
          >
            View My Work
          </a>
        </div>

        <!-- Social links - Apple Liquid Glass -->
        <div class="flex gap-4 pt-4" role="list">
          <a
            href="https://github.com/dullfarhan"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 liquid-glass rounded-full flex items-center justify-center text-textSecondary hover:text-accent-blue transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-blue focus:ring-offset-2 min-h-[44px] min-w-[44px]"
            aria-label="Visit Farhan's GitHub profile (opens in new tab)"
            title="GitHub Profile"
            role="listitem"
          >
            <Github size={20} aria-hidden="true" />
          </a>
          <a
            href="https://linkedin.com/in/dullfarhan"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 liquid-glass rounded-full flex items-center justify-center text-textSecondary hover:text-accent-blue transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-blue focus:ring-offset-2 min-h-[44px] min-w-[44px]"
            aria-label="Visit Farhan's LinkedIn profile (opens in new tab)"
            title="LinkedIn Profile"
            role="listitem"
          >
            <Linkedin size={20} aria-hidden="true" />
          </a>
        </div>
      </div>

      <!-- Right Column - Minimal placeholder (removed 3D for cleaner Apple aesthetic) -->
      <div class="hidden lg:block relative">
        <div class="w-full max-w-lg mx-auto liquid-glass-card p-12 rounded-3xl">
          <div class="aspect-square bg-gradient-ambient rounded-2xl flex items-center justify-center">
            <p class="text-textSecondary text-lg">Portfolio showcase</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator - Minimal Apple style -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden lg:block">
      <a href="#about" class="flex flex-col items-center gap-2 text-textSecondary hover:text-accent-blue transition-colors duration-300">
        <span class="text-xs font-medium">Scroll</span>
        <ArrowDown size={20} />
      </a>
    </div>
  </div>
</header>

<Divider />

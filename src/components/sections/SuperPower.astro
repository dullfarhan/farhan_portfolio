---
import { Image } from "astro:assets";
import CodeCircle from "@/assets/icons/code-circle.svg";
import BackEnd from "@/assets/icons/backend-icon.svg";
import Driver from "@/assets/icons/driver.svg";
import CloudAdd from "@/assets/icons/cloud-add.svg";
import SuperIcon from "@/assets/icons/Super-icon.svg";
import Divider from "../common/Divider.astro";
import SuperPowerCard from "../common/SuperPowerCard.astro";
const superPowers = [
  {
    title: "Frontend Development",
    icon: CodeCircle,
    description:
      "Creating fast, responsive, and user-friendly interfaces for seamless digital experiences.",
    bgColor: "bg-[#ECDFE6]", // pastel pink
  },
  {
    title: "Backend Development",
    icon: BackEnd,
    description:
      "Building secure, scalable, and high-performance backend solutions for seamless digital experiences.",
    bgColor: "bg-[#E9EBE8]", // light grey
  },
  {
    title: "Database Systems",
    icon: Driver,
    description:
      "Efficient, secure, and scalable database solutions for seamless data management.",
    bgColor: "bg-[#FBEDE0]", // pastel yellow/orange
  },
  {
    title: "DevOps & Cloud",
    icon: CloudAdd,
    description:
      "Streamlining deployment, scalability, and security with cutting-edge DevOps and cloud solutions.",
    bgColor: "bg-[#e7f0f2]", // light blue-grey
  },
];
---

<section>
  <div class="flex flex-col gap-[20px]">
    <div class="flex justify-center flex-col gap-[12px] sm:gap-[16px]">
      <div class="flex justify-center items-center gap-[8px] sm:gap-[16px]">
        <h2>My Super Powers</h2>
        <Image
          src={SuperIcon}
          alt="Super Icon"
          class="w-[34.58px] h-[28.22px] sm:w-[68.91px] sm:h-[56px]"
        />
      </div>
      <p
        class="text-center text-[14px] sm:text-[20px] w-[320px] h-[34px] sm:w-[599px] sm:h-[48px] mx-auto"
      >
        Debugging like Sherlock with a stack trace and solving mysteries one
        breakpoint at a time
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-[20px] sm:gap-[21px] xl:gap-[24px]">
      {superPowers.map((power) => <SuperPowerCard {...power} />)}
    </div>
  </div>
</section>
<Divider />

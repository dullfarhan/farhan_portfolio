---
const { href, icon, label } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="flex items-center space-x-2 text-textPrimary"
>
  <img
    src={icon}
    alt={label}
    class="h-8 w-8 sm:h-7 sm:w-7 md:h-6 md:w-6 lg:h-5 lg:w-5"
  />
  <span class="hidden md:block text-[0.9rem]">{label}</span>
</a>

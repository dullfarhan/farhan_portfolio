---
import { Image } from "astro:assets";
const {
  href = "",
  icon = "",
  label = "",
  linkClass = "",
  iconClass = "",
  labelClass = "",
  isloading = false,
} = Astro.props;

const showLabel = label.trim() !== "";
---

<a href={href} target="_blank" class={` ${linkClass}`}>
  <Image
    src={icon}
    alt={label || "social icon"}
    class={iconClass}
    height={28}
    width={28}
    loading={isloading ? "eager" : "lazy"}
  />
  {showLabel && <span class={labelClass}>{label}</span>}
</a>

---
interface Props {
  items: Array<{ label: string; href?: string }>;
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex items-center gap-2 text-sm text-textSecondary" role="list">
    {items.map((item, index) => (
      <li class="flex items-center gap-2" role="listitem">
        {index > 0 && (
          <span class="text-textSecondary opacity-50" aria-hidden="true">/</span>
        )}
        {item.href ? (
          <a 
            href={item.href} 
            class="hover:text-accent-blue transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-accent-blue focus:ring-offset-2 rounded px-1"
            aria-label={index === items.length - 1 ? `Current page: ${item.label}` : `Navigate to ${item.label}`}
          >
            {item.label}
          </a>
        ) : (
          <span class="text-accent-blue font-medium" aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>


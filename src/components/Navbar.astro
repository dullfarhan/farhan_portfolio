---
import Divider from "./Divider.astro";
---
<Divider />
<nav class="w-full px-[0.5rem] md:px-[2rem] lg:px-[3rem] py-1 m-3">
  <div class="  flex justify-between items-center">
    <a href="/" class="flex items-center space-x-4 text-textPrimary">
      <img src="/assets/logos/logo.svg" alt="Logo" class="h-6 w-6"/>
      <span class="text-[0.8rem]">Code by Farhan</span>
    </a>

    <div class="flex space-x-9 items-center mr-8">
      <a
        href="https://www.upwork.com"
        target="_blank"
        class="flex items-center space-x-2 text-textPrimary"
      >
        <img src="/assets/icons/up-work.svg" alt="Upwork" class="h-5 w-5" />
        <span class="text-[0.9rem] ">Upwork</span>
      </a>
      <a
        href="https://github.com"
        target="_blank"
        class="flex items-center space-x-2 text-textPrimary"
      >
        <img src="/assets/icons/github.svg" alt="GitHub" class="h-5 w-5" />
        <span class="text-[0.9rem] ">GitHub</span>
      </a>

      <!-- LinkedIn -->
      <a
        href="https://linkedin.com"
        target="_blank"
        class="flex space-x-2 text-textPrimary"
      >
        <img src="/assets/icons/linkedin.svg" alt="LinkedIn" class="h-5 w-5" />
        <span class="text-[0.9rem] ">LinkedIn</span>
      </a>
    </div>
  </div>
</nav>
<Divider />

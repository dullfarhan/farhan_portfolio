---
import Divider from "./Divider.astro";
---
<section class=" py-20 px-6">
  <div class="max-w-4xl mx-auto text-center text-textPrimary space-y-6">
    <!-- Text Section -->
    <div>
      <h6
        class="text-sm font-semibold text-textSecondary uppercase tracking-wide"
      >
        Full-Stack Dev, DevOps & Cloud, AI & ML, Team Leadership
      </h6>
      <h5 class="text-4xl font-bold mt-2">
        Code that Powers. Systems that Last.
      </h5>
      <p class="text-textSecondary mt-4 max-w-2xl mx-auto">
        Crafting seamless web applications with robust backends, intuitive
        frontends and scalable cloud solutions.
      </p>
    </div>

    <!-- Icons Row -->
    <div>
      <ul class="flex justify-center space-x-6 list-none">
        <li>
          <img
            src="/assets/icons/hero-icon-1.svg"
            alt="Icon 1"
            class="w-10 h-12"
          />
        </li>
        <li>
          <img
            src="/assets/icons/hero-icon-2.svg"
            alt="Icon 2"
            class="w-16 h-12"
          />
        </li>
        <li>
          <img
            src="/assets/icons/hero-icon-3.svg"
            alt="Icon 3"
            class="w-16 h-12"
          />
        </li>
        <li>
          <img
            src="/assets/icons/hero-icon-4.svg"
            alt="Icon 4"
            class="w-24 h-12"
          />
        </li>
      </ul>
    </div>

    <!-- CTA and User Info -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-6 mt-8"
    >
      <button
        class="flex items-center gap-2 bg-black text-white px-6 py-3 rounded hover:bg-gray-800 transition"
      >
        <img
          src="/assets/icons/hero-envelope-icon.svg"
          alt="Envelope"
          class="w-5 h-5"
        />
         Let's Talk Strategy
      </button>

      <span class="flex items-center gap-2 text-textSecondary">
        <img
          src="/assets/icons/hero-imgs-icon.svg"
          alt="hero Imgs"
          class="w-6 h-6"
        />
        <p>12+ Active Users</p>
      </span>
    </div>
  </div>
</section>
<Divider />

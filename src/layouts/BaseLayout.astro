---
import "../styles/global.css";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import { Font } from "astro:assets";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/assets/logos/logo.svg" />
    <title>Daanyal Memon | Full-Stack Developer & Google Cloud Lead</title>
    <meta
      name="description"
      content="Portfolio of Daanyal (Rhaila) Memon — Google Cloud Lahore Web Team Lead and Full-Stack Developer. TypeScript, NestJS, Next.js, GraphQL, PostgreSQL, Web3, AI."
    />
    <meta
      name="keywords"
      content="Daanyal Memon, portfolio, Google Cloud Lahore, Full-Stack Developer, TypeScript, NestJS, Next.js, GraphQL, PostgreSQL, Web3, AI, ML"
    />
    <meta name="author" content="Daanyal (Rhaila) Memon" />
    <!-- Open Graph / Facebook -->
    <meta
      property="og:title"
      content="Daanyal Memon | Full-Stack Developer & Google Cloud Lead"
    />
    <meta
      property="og:description"
      content="Explore the work of Daanyal (Rhaila) Memon: Full-Stack, Google Cloud, TypeScript, NestJS, GraphQL, PostgreSQL."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="/" />
    <meta
      property="og:image"
      content="/assets/images/profile.png"
    />
    <!-- Twitter -->
    <meta name="twitter:creator" content="@daanyal" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Daanyal Memon | Full-Stack Developer & Google Cloud Lead"
    />
    <meta
      name="twitter:description"
      content="Full-Stack Developer, Google Cloud, TypeScript, NestJS, GraphQL, PostgreSQL, Web3, AI."
    />
    <meta
      name="twitter:image"
      content="/assets/images/profile.png"
    />
    <script is:raw>
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "shkxymcvd2");
    </script>
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Daanyal (Rhaila) Memon",
        "url": "/",
        "sameAs": [
          "https://github.com/daanyal",
          "https://www.linkedin.com/in/daanyal-rhaila-memon/"
        ],
        "image": "/assets/images/profile.png",
        "jobTitle": "Full-Stack Developer, Google Cloud Web Team Lead",
        "description": "Portfolio of Daanyal (Rhaila) Memon — Google Cloud Lahore Web Team Lead and Full-Stack Developer. TypeScript, NestJS, Next.js, GraphQL, PostgreSQL, Web3, AI.",
        "alumniOf": "FAST - National University of Computer and Emerging Sciences",
        "knowsAbout": [
          "JavaScript",
          "Python",
          "DevOps",
          "Cloud Computing",
          "Kubernetes",
          "CI/CD",
          "Astro",
          "AI/ML"
        ],
        "workLocation": {
          "@type": "Place",
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Lahore",
            "addressCountry": "PK"
          }
        }
      }
    </script>
    <Font cssVariable="--font-inter" preload />
    <style>
      body {
        font-family: var(--font-inter);
      }
    </style>
  </head>
  <body
    class="relative px-[17.5px] sm:px-[39px] py-[24px] sm:py-[32px] mx-[14.3px] sm:mx-[30px] md:mx-[50px] lg:mx-[100px] dashed-left-right-border max-w-[1440px] items-center xl:mx-auto"
  >
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
